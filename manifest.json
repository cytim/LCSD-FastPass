{
  "manifest_version": 2,
  "name": "LCSD FastPass",
  "version": "2.0.0",
  "description": "協助你更快捷掌握康文署設施的BOOKING情況",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "browser_action": {
    "default_popup": "pages/popup.html"
  },
  "background": {
    "scripts": ["scripts/lodash.min.js", "scripts/moment.min.js", "scripts/moment.locale.zh-tw.min.js", "scripts/fastpass.js", "scripts/event-page.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://t2.leisurelink.lcsd.gov.hk/lcsd/leisurelink/dispatchFlow.do*"],
      "js": ["scripts/lodash.min.js", "scripts/jquery.min.js", "scripts/action.js", "scripts/fastpass.js", "scripts/inject.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "minimum_chrome_version": "40",
  "web_accessible_resources": [
    "css/*",
    "images/*",
    "pages/*"
  ]
}
